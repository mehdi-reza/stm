<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
    </encoder>
  </appender>
 
  <root level="DEBUG">
    <appender-ref ref="STDOUT" />
  </root>
  
  <logger name="org.jboss.stm" level="DEBUG">
  </logger>
  <logger name="com.arjuna.ats" level="DEBUG">
  </logger>
  <logger name="stm" level="DEBUG">
  </logger>
</configuration>